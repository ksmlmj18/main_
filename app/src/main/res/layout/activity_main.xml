<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_main_search"
        android:layout_width="356dp"
        android:layout_height="47dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/stroke_"
        android:hint="검색창"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_main_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#AAA6A6"
        android:text="회원가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_search"
        app:layout_constraintVertical_bias="0.755" />

    <Button
        android:id="@+id/bt_main_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#E91E63"
        android:text="로그인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_search"
        app:layout_constraintVertical_bias="0.656" />

    <Button
        android:id="@+id/bt_main_post"
        android:layout_width="143dp"
        android:layout_height="89dp"
        android:layout_marginStart="216dp"
        android:backgroundTint="#8BC34A"
        android:text="등록"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_search"
        app:layout_constraintVertical_bias="0.194" />

    <Button
        android:id="@+id/bt_main_chat"
        android:layout_width="143dp"
        android:layout_height="89dp"
        android:layout_marginStart="216dp"
        android:backgroundTint="#E91E63"
        android:text="채팅"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_search"
        app:layout_constraintVertical_bias="0.418" />

    <Button
        android:id="@+id/bt_main_auction"
        android:layout_width="143dp"
        android:layout_height="89dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="#8BC34A"
        android:text="경매"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_search"
        app:layout_constraintVertical_bias="0.194" />

    <Button
        android:id="@+id/bt_main_mypage"
        android:layout_width="143dp"
        android:layout_height="89dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="#E91E63"
        android:text="마이 페이지"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_main_search"
        app:layout_constraintVertical_bias="0.418" />

    <ImageView
        android:id="@+id/iv_register_berry"
        android:layout_width="180dp"
        android:layout_height="61dp"
        android:src="@drawable/berry2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

</androidx.constraintlayout.widget.ConstraintLayout>